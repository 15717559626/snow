<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sun.snow.module.system.mapper.UserMapper">

    <resultMap id="UserDTOMap" type="com.sun.snow.module.system.entity.UserDTO">
        <id column="user_id" property="userId"></id>
        <result column="user_name" property="userName"></result>
        <result column="user_phone" property="userPhone"></result>
        <result column="user_password" property="userPassword"></result>
        <collection property="roles" column="user_id" select="com.sun.snow.module.system.mapper.UserRoleMapper.roles"></collection>
    </resultMap>

    <select id="getUserDTO" resultMap="UserDTOMap">
        SELECT
            u.user_name,u.user_phone,u.user_id,u.user_password
        FROM
            user u
        WHERE
            u.user_phone = #{phone}
            AND u.user_status = '0'
    </select>
</mapper>
